{
	"name": "@todofall/root",
	"version": "0.0.1",
	"private": true,
	"description": "Root workspace",
	"repository": "https://github.com/pawelblaszczyk5/todofall",
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"format": "prettier \".\" --check",
		"format:fix": "prettier \".\" --write",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"package-json-sorter": "sort-package-json \"package.json\" \"{packages,tooling,apps}/*/package.json\" --check",
		"package-json-sorter:fix": "sort-package-json \"package.json\" \"{packages,tooling,apps}/*/package.json\"",
		"spellcheck": "cspell \"**\" --no-progress --show-context --show-suggestions",
		"typecheck": "turbo run typecheck",
		"update-dependencies": "taze latest --write --interactive --recursive --includeLocked --force"
	},
	"devDependencies": {
		"cspell": "^8.10.4",
		"prettier": "^3.3.3",
		"sort-package-json": "^2.10.0",
		"taze": "^0.15.1",
		"turbo": "2.0.6",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@9.5.0",
	"engines": {
		"node": "22.4.0",
		"pnpm": "9.5.0"
	},
	"engineStrict": true,
	"pnpm": {
		"peerDependencyRules": {
			"allowedVersions": {
				"@types/react": "npm:types-react@19.0.0-rc.1",
				"@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
				"eslint": "9.7.0",
				"react": "19.0.0-rc-9c6806964f-20240703",
				"react-dom": "19.0.0-rc-9c6806964f-20240703"
			}
		},
		"patchedDependencies": {
			"eslint-plugin-import-x@3.0.1": "patches/eslint-plugin-import-x@3.0.1.patch"
		}
	}
}
